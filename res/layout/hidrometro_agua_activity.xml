   <LinearLayout android:layout_width="fill_parent"  android:layout_height="wrap_content"   
    	android:orientation="horizontal" android:layout_marginTop="6dp" >
	    
	    <EditText android:layout_marginLeft="15dp" android:layout_width="70dp" android:id="@+id/idAnormalidade"
	    android:padding="5dp" android:inputType="number"  android:layout_height="wrap_content" android:textColor="#000000" />
        
        <Spinner android:layout_marginLeft="6dp" android:id="@+id/anormalidade"
        android:layout_width="225dp" android:layout_marginTop="-25dp" android:layout_height="wrap_content" />
        
   </LinearLayout>
   

</LinearLayout>