<selector xmlns:android="http://schemas.android.com/apk/res/android">

	<!--  Active menu -->
	<item android:state_selected="true" android:state_focused="false"
		android:state_pressed="false" android:drawable="@drawable/botao_bg_unselected" />
	<!--  Inactive menu -->
	<item android:state_selected="false" android:state_focused="false"
		android:state_pressed="false" android:drawable="@drawable/botao_bg_unselected" />
	<!--  Pressed menu -->
	<item android:state_pressed="true" android:drawable="@drawable/botao_bg_selected" />
	<!--  Selected menu (using d-pad) -->
	<item android:state_focused="true" android:state_selected="true"
		android:state_pressed="false" android:drawable="@color/transparent" />
</selector> 
