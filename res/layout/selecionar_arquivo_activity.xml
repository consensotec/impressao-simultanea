<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/fundotela" >
    
	<!-- HEAD -->
	<LinearLayout android:layout_width="fill_parent"  android:layout_height="wrap_content"
    	android:orientation="horizontal"  android:background="@drawable/fundopreto_bg" android:layout_marginBottom="10dip">
	
		<ImageView  android:layout_width="wrap_content" android:src="@drawable/arquivooffline" android:padding="6dp"
			android:layout_height="wrap_content" android:layout_marginRight="10dip" android:gravity="right" />
		    
	    <TextView android:layout_width="fill_parent" android:gravity="left" android:textSize="18sp" 
			android:padding="6dp"  android:layout_height="wrap_content" android:text="@string/str_selecionar_arquivo_title" android:textColor="#ffffff" />
    
    </LinearLayout>	
    	
	<ListView android:id="@+id/listFiles"
   		android:layout_width = "fill_parent"
		android:layout_height = "wrap_content">		
	</ListView>
	
</LinearLayout>
