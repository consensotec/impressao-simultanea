<?xml version="1.0" encoding="utf-8" standalone="no"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
 android:layout_marginTop="5dip" 
 android:layout_width="fill_parent" android:layout_height="wrap_content" 
 android:orientation="vertical"  >
 
    <!-- Resumo de quadra -->
	<LinearLayout android:minHeight="35dip"   
		android:layout_width="fill_parent" android:layout_height="wrap_content" 
		android:orientation="horizontal" android:background="@drawable/fundocinza_bg" 
		android:id="@+id/resumoQuadra">

			<TextView
			    android:id="@+id/numeroQuadra"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="8dip"
			    android:text="Quadra "
			    android:textColor="#000000"
			    android:layout_marginLeft="4dip"
			    android:textStyle="bold" 
			    android:textSize="15sp"
			    android:layout_weight="0.4" />
			    
			 <TextView
			    android:id="@+id/percentualTotalRealizadoQuadra"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="8dip"
			    android:textColor="#000000"
			    android:textStyle="bold" 
			    android:gravity="right"
			    android:layout_marginRight="10dip"/>

	 	
	</LinearLayout>

	<!-- Detalhes de quadra -->
    <LinearLayout
       android:id="@+id/detalhesQuadra"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical" 
       android:visibility="gone"
       android:background="@drawable/fundocinza_bg"
       android:layout_marginLeft="8dip" android:layout_marginRight="8dip">

     	<!-- Primeira parte detalhamento -->
     	<LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" 
			android:orientation="horizontal" >
     	
	     	<TextView
			    android:id="@+id/totalRealizadoQuadraDetalhe"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="10dip"
			    android:text="TotalRealizado"
			    android:textColor="#000000" 
			    android:textStyle="bold" android:layout_marginLeft="4dip" android:layout_weight="0.4"/>
			
			<TextView
			    android:id="@+id/totalImoveisVisitadosQuadra"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="10dip"
			    android:text="TotalImoveisVisitados"
			    android:textColor="#000000"
			    android:textStyle="bold" 
			    android:layout_marginLeft="4dip" android:layout_weight="0.4"/>    
        
        </LinearLayout>
        
        <!-- Segunda parte detalhamento -->
       	<LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" 
			android:orientation="horizontal" >
			
			<TextView
			    android:id="@+id/totalImoveisNaoVisitadosQuadra"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="10dip"
			    android:layout_marginBottom="10dip"
			    android:text="TotalImoveisNaoVisitados"
			    android:textColor="#000000"
			    android:textStyle="bold" 
			    android:layout_marginLeft="4dip" android:layout_weight="0.4"/>
	
	        <TextView 
	            android:textColor="#000000" 
	            android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:textStyle="bold"
				android:id="@+id/totalImoveisQuadra" 
				android:layout_marginTop="10dip"
				android:layout_marginLeft="4dip" android:layout_weight="0.4"/>
	
        </LinearLayout>
   	</LinearLayout>
	    
</LinearLayout>