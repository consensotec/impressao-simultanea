<?xml version="1.0" encoding="utf-8"?>
  
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent" 
    android:orientation="vertical" android:id="@+id/layoutTab" >

    <!-- Fundo branco - primeira parte tela -->   
    <LinearLayout android:layout_width="fill_parent"  android:layout_height="wrap_content"  
        android:minHeight="50dip" 
    	android:orientation="vertical" android:layout_marginTop="6dip"
    	android:background="@drawable/fundobranco_bg" android:layout_marginLeft="7dip" 
    	android:layout_marginRight="7dip">

		<LinearLayout 
    		android:layout_width="fill_parent" android:layout_height="wrap_content"
    		android:orientation="horizontal" >
		
				<TextView  android:layout_height="wrap_content" 
	        		android:layout_width="wrap_content" android:padding="5dp" 
	        		android:paddingLeft="4dip" android:paddingRight="3dip" android:textSize="14sp" android:gravity="left|center" android:layout_gravity="left|center"
	        		android:id="@+id/nomeEndereco" android:text="@string/str_hidrometro_endereco" android:textColor="#000000" android:visibility="visible" android:width="300dp"/>
				
				<TextView android:layout_width="wrap_content" android:layout_height="30dip" 
				    android:layout_margin="5dip" android:layout_marginLeft="12dip" 
					android:background="@drawable/vermelho_bg" android:id="@+id/rota_finalizada"
					android:paddingLeft="3dip" android:paddingRight="3dip" android:textSize="15sp" 
					android:gravity="left|center" android:text="Rota Finalizada!" android:layout_gravity="left|center"
					android:visibility="gone"/>
	        		
				<TextView android:layout_width="wrap_content" android:layout_height="30dip" 
				    android:layout_margin="5dip" android:layout_marginLeft="12dip" 
					android:background="@drawable/imovelcondominio_bg" android:id="@+id/posicaoCondominio"
					android:paddingLeft="3dip" android:paddingRight="3dip" android:textSize="15sp" 
					android:gravity="left|center" android:layout_gravity="left|center"
					android:visibility="invisible"/>
			 	
			<LinearLayout 
		    	android:layout_width="fill_parent" android:id="@+id/revisitar" android:layout_height="wrap_content"  android:visibility="gone"
		    	android:orientation="horizontal" android:layout_gravity="right" android:gravity="right">
				
				<TextView android:layout_width="wrap_content" android:layout_height="30dip" android:layout_margin="5dip" 
					android:background="@drawable/vermelho_bg" android:text="A visitar" android:layout_marginRight="10dip"		
					android:paddingLeft="6dip" android:paddingRight="6dip" android:textSize="15sp" android:gravity="right|center" android:layout_gravity="right|center" />
				
			</LinearLayout>
			
			 
		</LinearLayout>
		
		<!-- Endereço -->
		<LinearLayout 
    	android:layout_width="fill_parent" android:layout_height="wrap_content"
    	android:orientation="horizontal" >
					
			<TextView android:layout_width="fill_parent" android:paddingLeft="7dip" android:layout_marginTop="-4dip" android:paddingRight="7dip" 
				android:layout_height="wrap_content" android:paddingBottom="3dip" android:textStyle="bold" android:id="@+id/endereco" android:textColor="#0f0f0f"/>
	        		        	
		</LinearLayout>
		
		<LinearLayout android:layout_width="fill_parent"  android:layout_height="wrap_content"  android:visibility="gone"
		    	android:orientation="horizontal" android:paddingLeft="7dip"  android:paddingBottom="10dip" android:id="@+id/llInscricao">
			    	
			    <TextView android:layout_width="wrap_content"  android:textStyle="bold"
			    	android:layout_height="wrap_content" android:text="@string/str_info_inscricao" android:textColor="#000000" />
			
				 <TextView android:id="@+id/inscricao"
			        android:layout_width="wrap_content" android:textSize="15sp" android:layout_height="wrap_content"
			        android:textColor="#000000" />
			
			</LinearLayout>	
		
	</LinearLayout>

    
     <!-- Fundo branco - segunda parte tela -->   
    <LinearLayout android:layout_width="fill_parent"  android:layout_height="wrap_content"  android:minHeight="200dip"
    	android:orientation="vertical" android:layout_marginTop="4dip"  android:background="@drawable/fundobranco_bg"
    	android:layout_marginLeft="7dip" android:layout_marginRight="7dip">
	    
	    <!-- Hidrometro e Local Instalacao -->
		<LinearLayout android:layout_width="fill_parent"  android:layout_height="wrap_content" android:orientation="vertical" 
			android:layout_marginTop="6dip" android:layout_marginBottom="3dip">
	    	    	    			    			
			    	<LinearLayout android:layout_width="wrap_content" android:layout_weight="0.6" android:gravity="left" android:layout_gravity="left"  android:layout_height="wrap_content"   
	    			android:orientation="vertical"  >	    			
	    			
				    	<LinearLayout android:layout_width="fill_parent"  android:layout_height="wrap_content"   
			    			android:orientation="horizontal" >
	    			
					    	<TextView  android:layout_marginLeft="6dip"
				        		android:layout_width="wrap_content" android:layout_height="wrap_content"
				        		android:text="@string/str_hidrometro_hidrometro"  android:textColor="#000000" android:textSize="14sp" />
						
							<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingLeft="1dip"
				        		android:id="@+id/hidrometro" android:textStyle="bold" android:textColor="#000000" android:textSize="13sp" />
				        		
				        	<LinearLayout android:layout_width="fill_parent"  android:layout_height="wrap_content"   
			    			android:orientation="horizontal" android:layout_gravity="right" android:gravity="right" >
			    			
					        	<TextView  android:gravity="right" android:layout_gravity="right"
					        		android:layout_width="wrap_content" android:layout_height="wrap_content"
					        		android:text="@string/str_hidrometro_rota"  android:textColor="#000000" android:textSize="14sp" 
					        		android:layout_marginLeft="3dp"/>
					        		
					        		<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingLeft="1dip"
				        		android:id="@+id/rota" android:textStyle="bold" android:textColor="#000000" android:textSize="13sp" />
					        		
					        </LinearLayout>
			        		
			        	</LinearLayout>
			        	
					<LinearLayout android:layout_width="fill_parent"  android:layout_height="wrap_content"   
		    			android:orientation="horizontal">
		    			
			        	<TextView android:layout_marginLeft="6dip"
			        		android:layout_width="wrap_content"  android:layout_height="wrap_content"
			        		android:text="Local Instalação:"  android:textColor="#000000" android:textSize="14sp"/>
			        
						<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingLeft="3dp"
			        		android:id="@+id/local" android:textStyle="bold" android:textColor="#000000" />
					</LinearLayout>
			        
					<LinearLayout android:layout_width="fill_parent"  android:layout_height="wrap_content"   
			    			android:orientation="horizontal">												
						
				        	<TextView
				        		android:layout_width="wrap_content"  android:layout_height="wrap_content"
				        		android:text="@string/str_info_matricula" android:layout_marginLeft="6dip" 
				        		android:textColor="#000000" android:textSize="14sp"/>
				        
							<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingLeft="3dp"
				        		android:id="@+id/matricula" android:textStyle="bold" android:textColor="#FF0000" />
					</LinearLayout>
					
			    </LinearLayout>
						
				<!--  Imagem de revisitar -->
		        <LinearLayout android:layout_width="wrap_content" android:layout_weight="0.2" android:gravity="right" android:layout_gravity="right"  android:layout_height="wrap_content"   
	    			android:orientation="vertical" android:visibility="gone" android:id="@+id/revisitarAlgum" >	
	    						        	
	        		<LinearLayout android:layout_width="fill_parent"  android:layout_height="wrap_content"   
	    				android:orientation="vertical" android:gravity="right" android:layout_gravity="right">
	    					    				
						<ImageView  android:layout_width="wrap_content"  android:src="@drawable/bolarevisitar" android:layout_gravity="right"
						android:layout_height="wrap_content"  android:gravity="right" />
		        						
					</LinearLayout>
				
	        	</LinearLayout>	
	        	
	        	<!-- Imagem de calculado ou impresso -->
		         <LinearLayout android:layout_width="wrap_content" android:layout_weight="0.2" android:gravity="right" android:layout_gravity="right"  android:layout_height="wrap_content"   
	    			android:orientation="vertical" >	
	    						        	
	        		<LinearLayout android:layout_width="fill_parent"  android:layout_height="wrap_content"   
	    				android:orientation="vertical" android:gravity="right" android:layout_gravity="right">
	    					    				
						<ImageView  android:layout_width="wrap_content" android:id="@+id/status" android:layout_gravity="right"
						android:layout_height="wrap_content" android:layout_marginRight="10dip" android:gravity="right" />
												
					</LinearLayout>
				
	        	</LinearLayout>	
	    </LinearLayout>

		<LinearLayout android:layout_width="fill_parent"  android:layout_height="wrap_content" android:orientation="horizontal" 
			android:layout_marginTop="2dip">
		<View android:layout_width="fill_parent" android:layout_height="1.5dip" android:layout_marginLeft="6dip" android:layout_marginRight="6dip" android:background="#8F8F8F"/>
		</LinearLayout> 
        
		<!-- Leitura -->
		<LinearLayout android:layout_width="fill_parent"  android:layout_height="wrap_content" android:orientation="horizontal" 
			android:layout_marginTop="6dip">
	    	    
		    <LinearLayout android:layout_width="fill_parent"  android:layout_height="wrap_content"   
	    		android:orientation="vertical">
	    
	    		<LinearLayout android:layout_width="fill_parent"  android:layout_height="wrap_content"   
	    			android:orientation="horizontal">
	    			
			    	<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dip"
		       			 android:text="@string/str_hidrometro_leitura" android:textColor="#000000" />

					<EditText android:inputType="number" android:paddingLeft="5dip"
				        android:layout_width="120dip" android:layout_height="wrap_content"
				        android:textColor="#000000" android:id="@+id/leitura" />
				 </LinearLayout>       
				
			</LinearLayout>
   		</LinearLayout>
   
  		<!-- Anormalidade -->
  		<LinearLayout android:layout_width="fill_parent"  android:layout_height="wrap_content" android:orientation="horizontal" 
			android:layout_marginTop="6dip" >
	    	    
		    <LinearLayout android:layout_width="fill_parent"  android:layout_height="wrap_content"   
	    		android:orientation="vertical">
	    
	    		<LinearLayout android:layout_width="fill_parent"  android:layout_height="wrap_content"   
	    			android:orientation="horizontal">
	    			
	    			<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dip"
		       			 android:text="@string/str_hidrometro_anormalidade" android:textColor="#000000" />
		       	
		      </LinearLayout>		 
		       	
		       	<LinearLayout android:layout_width="fill_parent"  android:layout_height="wrap_content"   
	    			android:orientation="horizontal"> 
	    
				    <EditText android:paddingLeft="5dip" android:layout_width="42dip" android:id="@+id/idAnormalidade"
				    android:inputType="number"  android:layout_height="wrap_content" 
				    android:textColor="#000000" android:layout_marginLeft="7dip"
				    android:layout_gravity="center_horizontal" android:gravity="center"/>
			        
			        <Spinner 
			            android:id="@+id/anormalidade"
			        	android:layout_width="fill_parent" android:layout_height="48dip" 
			        	android:layout_marginRight="7dip" android:scrollbarStyle="insideOverlay"  
			        	android:layout_gravity="center_horizontal" android:gravity="center"/>
        
   				</LinearLayout>
   			</LinearLayout>
	   	</LinearLayout>
	</LinearLayout>

