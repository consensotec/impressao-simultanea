<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/fundocinza_bg" >
   
	<!-- HEAD -->
	<LinearLayout android:layout_width="fill_parent"  android:layout_height="wrap_content"
    	android:orientation="horizontal"  android:background="@drawable/fundopreto_bg">
	
		<ImageView  android:layout_width="wrap_content" android:src="@drawable/chart_bar" android:padding="6dp"
			android:layout_height="wrap_content" android:layout_marginRight="10dip" android:gravity="right" />
		    
	    <TextView android:layout_width="fill_parent" android:gravity="left" android:textSize="18sp" 
			android:padding="6dp"  android:layout_height="wrap_content" android:text="@string/str_menu_relatorio" android:textColor="#ffffff" />
    
    </LinearLayout>	
	
	<!-- TOTAL -->
	<LinearLayout android:layout_width="fill_parent"  android:layout_height="wrap_content"
    	android:orientation="horizontal" android:paddingTop="6dip" android:paddingLeft="6dip">
		
		<TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#000000" android:textSize="15sp" 
	        android:text="@string/str_total_imoveis" />
		
		<TextView
	        android:id="@+id/totalImoveis"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#000000" android:textSize="15sp" />
		
	
	</LinearLayout>

	<!-- VISITADOS -->
    <LinearLayout android:layout_width="fill_parent"  android:layout_height="wrap_content"
    	android:orientation="horizontal" android:paddingLeft="6dip">
    	
    	<TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#000000" android:textSize="15sp" 
	        android:text="@string/str_total_imoveis_visitados" />

		<TextView
        	android:id="@+id/totalImoveisVisitados"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textColor="#000000" android:textSize="15sp" />
	
	</LinearLayout>
	
    <!-- A VISITADOS -->
    <LinearLayout android:layout_width="fill_parent"  android:layout_height="wrap_content"
    	android:orientation="horizontal" android:paddingLeft="12sp">
    	
    	<TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#000000" android:textSize="15sp" 
	        android:text="@string/str_total_imoveis_a_visitar" />

		<TextView
        	android:id="@+id/totalImoveisAVisitar"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textColor="#000000" android:textSize="15sp" />
	
	</LinearLayout>

	<!-- PERCENTUAL VISITADOS -->
    <LinearLayout android:layout_width="fill_parent"  android:layout_height="wrap_content"
    	android:orientation="horizontal" android:paddingLeft="6dip">
	
		<TextView
	        android:id="@+id/percentualImoveisVisitados" android:textColor="#000000"
	        android:layout_width="wrap_content" android:textSize="15sp"
	        android:layout_height="wrap_content" android:visibility="visible"/>

	</LinearLayout>
	
	<!-- PROGRESSO -->
	<LinearLayout android:layout_width="match_parent"  android:layout_height="30dip"
    	android:orientation="horizontal"  android:background="@drawable/borders"
    	android:layout_marginRight="10dip" android:layout_marginLeft="8dip" android:layout_marginBottom="2dip">
		
	    
	    <LinearLayout  android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:layout_marginTop="1dip"
	    	android:layout_marginBottom="1dip"
	    	android:layout_marginLeft="1dip"
	    	android:id="@+id/concluido"
	    	android:orientation="horizontal" android:layout_weight="0.6"  android:background="#ADFF2F" >
    	</LinearLayout>	
	    
	   
	    <LinearLayout  android:layout_width="fill_parent" android:layout_height="fill_parent"
	    	android:orientation="horizontal" android:layout_weight="0.4"  
	    	android:layout_marginTop="1dip"
	    	android:layout_marginBottom="1dip" 
	    	android:layout_marginRight="1dip"
	    	android:background="@drawable/fundocinza_bg" 
	    	android:id="@+id/nao_concluido">
   	    </LinearLayout>	
    
	    
    	
    </LinearLayout>	
	
	<LinearLayout android:layout_width="fill_parent"  android:layout_height="wrap_content" android:orientation="horizontal" 
		android:layout_marginTop="2dip">
		<View android:layout_width="fill_parent" android:layout_height="1.2dip" android:layout_marginLeft="6dip"
			android:layout_marginRight="6dip" android:background="#8F8F8F"/>
	</LinearLayout> 
	
	<!-- Visualizado com anormalidade -->
	<LinearLayout android:layout_width="fill_parent"  android:layout_height="wrap_content"
    	android:orientation="horizontal" android:paddingLeft="6dip" android:paddingTop="7dip">
	
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#000000" android:textSize="15sp" 
	        android:text="@string/str_total_com_anormalidade" />
	        
		<TextView
	        android:id="@+id/totalImoveisVisitadosComAnormalidade"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" android:textStyle="bold"
	        android:textColor="#000000" android:textSize="15sp" android:paddingLeft="3dip"/>

	</LinearLayout>
	
	<!-- TOTAL VISITADO -->
	<LinearLayout android:layout_width="fill_parent"  android:layout_height="wrap_content"
    	android:orientation="horizontal" android:paddingLeft="6dip"  android:paddingTop="7dip">
    	
    		<TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="#000000" android:textSize="15sp" 
		        android:text="@string/str_total_ja_visitado" />
	
			<TextView
		        android:id="@+id/percentualVisitadosComAnormalidade" android:textColor="#000000"
		        android:layout_width="wrap_content" android:textStyle="bold" android:background="@drawable/tab_anormalidade_bg"
		        android:layout_height="wrap_content" android:padding="6dip" android:layout_marginLeft="3dip"/>

	</LinearLayout>		        
	
	<LinearLayout android:layout_width="fill_parent"  android:layout_height="wrap_content" android:orientation="horizontal" 
		android:layout_marginTop="2dip">
		<View android:layout_width="fill_parent" android:layout_height="1.4dip" android:layout_marginLeft="6dip"
			android:layout_marginRight="6dip" android:background="#8F8F8F"/>
	</LinearLayout> 
	
	<!-- Visualizado sem anormalidade -->
	<LinearLayout android:layout_width="fill_parent"  android:layout_height="wrap_content"
    	android:orientation="horizontal" android:paddingLeft="6dip">
	
		<TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#000000" android:textSize="15sp" 
	        android:text="@string/str_total_sem_anormalidade" />
	
		<TextView
	        android:id="@+id/totalImoveisVisitadosSemAnormalidade"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#000000" android:textSize="12sp" android:paddingLeft="3dip"/>
	
	</LinearLayout>
	
	<!-- TOTAL VISITADO -->
	<LinearLayout android:layout_width="fill_parent"  android:layout_height="wrap_content"
    	android:orientation="horizontal" android:padding="6dip">
	
		<TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#000000" android:textSize="15sp" 
	        android:text="@string/str_total_ja_visitado" />
	        
			<TextView
		        android:id="@+id/percentualVisitadosSemAnormalidade" android:textColor="#000000"
		        android:layout_width="wrap_content" android:textStyle="bold" android:background="@drawable/tab_anormalidade_bg"
		        android:layout_height="wrap_content" android:visibility="visible" android:padding="6dip" android:layout_marginLeft="3dip"/>

	</LinearLayout>		
	
	<!-- BOTÃƒO RESUMO QUADRA -->
	<LinearLayout android:layout_width="fill_parent"  android:layout_height="wrap_content" android:layout_marginTop="8dip" android:padding="3dip"
    	android:orientation="horizontal" android:paddingLeft="20dip" android:gravity="center" android:background="@drawable/fundopreto_bg">
    		
		<Button
		    android:id="@+id/btRelatorioPorQuadra"
		    android:layout_width="wrap_content" android:gravity="center"
		    android:text="@string/str_relatorio_resumo_quadra" android:layout_gravity="center" android:layout_height="45dip"/>
	    
	</LinearLayout>
	
    
	
</LinearLayout>