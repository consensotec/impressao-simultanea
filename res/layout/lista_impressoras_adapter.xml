<?xml version="1.0" encoding="utf-8" standalone="no"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
 android:minHeight="80dip" android:layout_marginTop="0dip" 
 android:layout_width="fill_parent" android:layout_height="wrap_content" 
 android:orientation="vertical" >
 
	<LinearLayout android:minHeight="60dip"   
		android:layout_width="fill_parent" android:layout_height="wrap_content" 
		android:orientation="horizontal" android:layout_marginBottom="5dip" android:background="@drawable/botao_bg_selector" 
		android:layout_marginLeft="7dip" android:layout_marginRight="7dip">

	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="match_parent"
	        android:orientation="horizontal">

        
		<TextView android:id="@+id/impressora" android:background="@drawable/impressora"  
		    android:layout_marginTop="5dip" android:layout_marginLeft="10dip" 
		    android:textColor="#ffffff" 
		    android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
			

		<LinearLayout android:layout_marginLeft="10dip" 
		    android:layout_width="fill_parent" 
		    android:layout_height="fill_parent" 
		    android:orientation="vertical" >
			
		    <TextView android:textColor="#000000" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:textStyle="bold"
			android:id="@+id/nomeImpressora" android:text="NomeImpressora" android:layout_marginTop="6dip"/>
		
		    
			<TextView
			    android:id="@+id/enderecoBluetooth"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="10dip"
			    android:text="EnderecoBluetooth"
			    android:textColor="#000000"
			    android:textStyle="bold" />
			
		</LinearLayout>
	
	</LinearLayout>
	 	
</LinearLayout>
</LinearLayout>
	
 