        android:text="Leitura: "  android:textColor="#ffffff" />
        
   <EditText android:layout_marginLeft="15dp" android:inputType="number"
        android:layout_width="270dp" android:padding="5dp" android:layout_height="wrap_content"
        android:textColor="#000000" android:id="@+id/leitura" />
   
   <TextView android:layout_marginLeft="15dp" android:background="#bac2ca" 
